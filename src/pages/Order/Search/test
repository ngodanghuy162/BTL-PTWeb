// Import các module cần thiết
import React, { useState } from 'react';
import { Container, Row, Col, Form, Button } from 'react-bootstrap';

// Component FormTraCuuDonHang
const FormTraCuuDonHang = () => {
  const [maBuuGui, setMaBuuGui] = useState('');

  const handleInputChange = (e) => {
    setMaBuuGui(e.target.value);
  };

  const handleSearch = () => {
    // Xử lý logic tìm kiếm ở đây
    console.log('Đã nhấn nút Tìm kiếm với mã bưu gửi:', maBuuGui);
  };

  return (
    <Container>
      <Row>
        <Col>
          <h1>Mã bưu gửi (tra nhiều bill thêm dấu phẩy giữa các bill)</h1>
          <Form>
            <Form.Group controlId="maBuuGui">
              <Form.Label>Nhập mã bưu gửi:</Form.Label>
              <Form.Control
                type="text"
                placeholder="VD: EB125966888VN, EI125556888VN"
                value={maBuuGui}
                onChange={handleInputChange}
              />
            </Form.Group>
            <Button variant="primary" onClick={handleSearch}>
              Tìm kiếm
            </Button>
          </Form>
        </Col>
      </Row>
    </Container>
  );
};

export default FormTraCuuDonHang;
